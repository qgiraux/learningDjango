// .devcontainer/devcontainer.json
{
    "name": "Django Dev Container",
    "dockerComposeFile": "docker-compose.yml",
    "service": "web",
    "workspaceFolder": "/workspace",
    // Mounts project folder to /workspace in the container
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind"
    ],

    // Setup post-create commands to install Python dependencies
    "postCreateCommand": "pip install -r .devcontainer/requirements.txt",

    // Forward port 8000 (Django default)
    "forwardPorts": [8000, 5432],

    // Configure settings for VS Code extensions
    "customizations": {
        "vscode": {
            "settings": {
                "python.pythonPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.linting.flake8Enabled": true,
                "python.formatting.autopep8Path": "autopep8",
                "python.analysis.extraPaths": [
                    "/workspace"
                ]
            },
            "extensions": [
                "ms-python.python",
                "batisteo.vscode-django"
            ]
        }
    }

    // VS Code extensions for Django development
    
}
